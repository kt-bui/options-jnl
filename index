    <script>
        // Data Storage
        let positions = JSON.parse(localStorage.getItem('wheelPositions')) || [];
        let backtestHistory = JSON.parse(localStorage.getItem('backtestHistory')) || [];

        // Tab Switching
        function switchTab(tab) {
            document.querySelectorAll('.tab-content').forEach(el => el.classList.remove('active'));
            document.querySelectorAll('.tab-button').forEach(el => el.classList.remove('active'));
            
            document.getElementById(tab).classList.add('active');
            event.target.classList.add('active');
        }

        // Fetch Stock Price from Alpha Vantage (free API, no key required for demo)
        async function fetchStockPrice() {
            const symbol = document.getElementById('symbol').value.toUpperCase();
            if (!symbol) {
                alert('Please enter a symbol');
                return;
            }

            const loader = document.getElementById('priceLoader');
            loader.innerHTML = '<div class="spinner"></div>';

            try {
                // Using Alpha Vantage free tier (demo works without key)
                const response = await fetch(
                    `https://www.alphavantage.co/query?function=GLOBAL_QUOTE&symbol=${symbol}&apikey=demo`
                );
                const data = await response.json();
                
                if (data['Global Quote'] && data['Global Quote']['05. price']) {
                    const price = parseFloat(data['Global Quote']['05. price']);
                    document.getElementById('currentPrice').value = price.toFixed(2);
                } else {
                    alert('Could not fetch price. Please verify symbol or try again.');
                    document.getElementById('currentPrice').value = '';
                }
            } catch (error) {
                alert('Error fetching price: ' + error.message);
            } finally {
                loader.innerHTML = '';
            }
        }

        // Add Position
        function addPosition() {
            const symbol = document.getElementById('symbol').value.toUpperCase();
            const currentPrice = parseFloat(document.getElementById('currentPrice').value);
            const quantity = parseInt(document.getElementById('quantity').value);
            const positionType = document.getElementById('positionType').value;
            const strikePrice = parseFloat(document.getElementById('strikePrice').value);
            const premium = parseFloat(document.getElementById('premium').value);
            const contractFee = parseFloat(document.getElementById('contractFee').value);
            const expirationDate = document.getElementById('expirationDate').value;

            if (!symbol || !currentPrice || !quantity || !strikePrice || !premium || !expirationDate) {
                alert('Please fill in all fields');
                return;
            }

            const position = {
                id: Date.now(),
                symbol,
                currentPrice,
                quantity,
                positionType,
                strikePrice,
                premium,
                contractFee,
                expirationDate,
                entryDate: new Date().toISOString(),
                netCredit: (premium * quantity * 100) - contractFee
            };

            positions.push(position);
            localStorage.setItem('wheelPositions', JSON.stringify(positions));

            // Clear form
            document.getElementById('symbol').value = '';
            document.getElementById('currentPrice').value = '';
            document.getElementById('quantity').value = '100';
            document.getElementById('strikePrice').value = '';
            document.getElementById('premium').value = '';
            document.getElementById('contractFee').value = '10';
            document.getElementById('expirationDate').value = '';

            updatePositionsDisplay();
            updateMetrics();
        }

        // Delete Position
        function deletePosition(id) {
            if (confirm('Delete this position?')) {
                positions = positions.filter(p => p.id !== id);
                localStorage.setItem('wheelPositions', JSON.stringify(positions));
                updatePositionsDisplay();
                updateMetrics();
            }
        }

        // Calculate Days to Expiration
        function daysToExpiration(expDate) {
            const today = new Date();
            const exp = new Date(expDate);
            const diff = exp - today;
            return Math.ceil(diff / (1000 * 60 * 60 * 24));
        }

        // Calculate P&L
        function calculatePL(position) {
            const daysToExp = daysToExpiration(position.expirationDate);
            const netCredit = (position.premium * position.quantity * 100) - position.contractFee;
            
            let pl = netCredit;
            if (position.positionType === 'cc' || position.positionType === 'csp') {
                const priceMove = (position.strikePrice - position.currentPrice) * position.quantity * 100;
                pl = netCredit - priceMove;
            }
            
            return {
                netCredit,
                totalPL: pl,
                status: daysToExp <= 0 ? 'Expired' : daysToExp <= 7 ? 'Closing' : daysToExp <= 21 ? 'Mid-Term' : 'Fresh'
            };
        }

        // Update Positions Display
        function updatePositionsDisplay() {
            const tbody = document.getElementById('positionsBody');
            const empty = document.getElementById('positionsEmpty');
            
            if (positions.length === 0) {
                document.getElementById('positionsTable').style.display = 'none';
                empty.style.display = 'block';
                return;
            }

            document.getElementById('positionsTable').style.display = 'block';
            empty.style.display = 'none';

            tbody.innerHTML = positions.map(pos => {
                const pl = calculatePL(pos);
                const dte = daysToExpiration(pos.expirationDate);
                const typeLabel = pos.positionType === 'csp' ? 'CSP' : pos.positionType === 'cc' ? 'CC' : 'Stock';
                
                let statusBadge = `<span class="badge badge-warning">${pl.status}</span>`;
                if (pl.totalPL > 0) statusBadge = `<span class="badge badge-success">${pl.status}</span>`;
                if (pl.totalPL < 0) statusBadge = `<span class="badge badge-danger">${pl.status}</span>`;

                return `
                    <tr>
                        <td><strong>${pos.symbol}</strong></td>
                        <td>${typeLabel}</td>
                        <td>${pos.quantity}</td>
                        <td>$${pos.strikePrice.toFixed(2)}</td>
                        <td>$${pos.premium.toFixed(2)}</td>
                        <td>$${pos.contractFee.toFixed(2)}</td>
                        <td>$${pos.currentPrice.toFixed(2)}</td>
                        <td>${dte} days</td>
                        <td>${statusBadge}</td>
                        <td style="color: ${pl.totalPL >= 0 ? 'var(--color-success)' : 'var(--color-danger)'}; font-weight: 600;">
                            $${pl.totalPL.toFixed(2)}
                        </td>
                        <td>
                            <button class="btn btn-danger btn-sm" onclick="deletePosition(${pos.id})">Delete</button>
                        </td>
                    </tr>
                `;
            }).join('');
        }

        // Update Metrics
        function updateMetrics() {
            let totalCapital = 0;
            let totalPremium = 0;
            let totalFees = 0;

            positions.forEach(pos => {
                totalCapital += pos.strikePrice * pos.quantity * 100;
                totalPremium += pos.premium * pos.quantity * 100;
                totalFees += pos.contractFee;
            });

            document.getElementById('totalCapital').textContent = totalCapital.toFixed(0);
            document.getElementById('totalPremium').textContent = totalPremium.toFixed(2);
            document.getElementById('totalFees').textContent = totalFees.toFixed(2);
            document.getElementById('netCredit').textContent = `$${(totalPremium - totalFees).toFixed(2)}`;
        }

        // Run Backtest
        function runBacktest() {
            const symbol = document.getElementById('backtest-symbol').value.toUpperCase();
            const startDate = document.getElementById('backtest-start').value;
            const endDate = document.getElementById('backtest-end').value;
            const delta = parseFloat(document.getElementById('backtest-delta').value);
            const premiumPct = parseFloat(document.getElementById('backtest-premium').value) / 100;
            const fees = parseFloat(document.getElementById('backtest-fees').value);
            const capital = parseFloat(document.getElementById('backtest-capital').value);
            const qty = parseInt(document.getElementById('backtest-qty').value);

            if (!symbol || !startDate || !endDate) {
                alert('Please fill in all fields');
                return;
            }

            // Simulate backtest with realistic wheel strategy
            const months = 12; // Simplified to 12 months
            const monthlyResults = [];
            let cumulativePL = 0;
            let totalTrades = 0;
            let winningTrades = 0;

            const basePrice = 150; // Base price for simulation
            
            for (let i = 0; i < months; i++) {
                const strikePrice = basePrice * (1 - delta);
                const monthlyPremium = strikePrice * qty * 100 * premiumPct;
                
                // Simulate 30% chance of assignment
                const assigned = Math.random() < 0.3;
                const assignmentLoss = assigned ? (basePrice - strikePrice) * qty * 100 : 0;
                
                const monthPL = monthlyPremium - fees - assignmentLoss;
                cumulativePL += monthPL;
                totalTrades++;
                if (monthPL > 0) winningTrades++;

                monthlyResults.push({
                    month: i + 1,
                    premium: monthlyPremium,
                    fees: fees,
                    loss: assignmentLoss,
                    pl: monthPL,
                    cumulative: cumulativePL
                });
            }

            // Display Results
            const totalReturn = ((cumulativePL / capital) * 100).toFixed(2);
            const winRate = ((winningTrades / totalTrades) * 100).toFixed(0);
            const avgPL = (cumulativePL / totalTrades).toFixed(2);

            document.getElementById('backtest-return').textContent = totalReturn + '%';
            document.getElementById('backtest-trades').textContent = totalTrades;
            document.getElementById('backtest-winrate').textContent = winRate + '%';
            document.getElementById('backtest-avgpl').textContent = avgPL;

            // Draw Chart
            const chart = document.getElementById('backtestChart');
            chart.innerHTML = monthlyResults.map(r => {
                const barHeight = (Math.abs(r.pl) / Math.max(...monthlyResults.map(x => Math.abs(x.pl)))) * 100;
                return `<div class="backtest-bar" style="height: ${barHeight}%; background: ${r.pl >= 0 ? 'var(--color-success)' : 'var(--color-danger)'};" title="Month ${r.month}: $${r.pl.toFixed(2)}"></div>`;
            }).join('');

            // Table
            const table = document.getElementById('backtestTable');
            table.innerHTML = monthlyResults.map(r => `
                <tr>
                    <td>Month ${r.month}</td>
                    <td style="color: var(--color-success);">$${r.premium.toFixed(2)}</td>
                    <td style="color: var(--color-danger);">$${r.fees.toFixed(2)}</td>
                    <td style="color: var(--color-danger);">$${r.loss.toFixed(2)}</td>
                    <td style="color: ${r.pl >= 0 ? 'var(--color-success)' : 'var(--color-danger)'}; font-weight: 600;">$${r.pl.toFixed(2)}</td>
                    <td style="color: var(--color-primary); font-weight: 600;">$${r.cumulative.toFixed(2)}</td>
                </tr>
            `).join('');

            document.getElementById('backtestResults').style.display = 'block';
        }

        // Generate Tax Report
        function generateTaxReport() {
            const taxYear = document.getElementById('taxYear').value;
            const taxLot = document.getElementById('taxLot').value;

            if (positions.length === 0) {
                alert('No positions to report');
                return;
            }

            let shortTermGains = 0;
            let longTermGains = 0;
            let totalFees = 0;

            positions.forEach(pos => {
                totalFees += pos.contractFee;
                const pl = calculatePL(pos);
                
                // Simplified: if less than 1 year, short-term
                const daysHeld = Math.floor((new Date() - new Date(pos.entryDate)) / (1000 * 60 * 60 * 24));
                if (daysHeld < 365) {
                    shortTermGains += pl.totalPL;
                } else {
                    longTermGains += pl.totalPL;
                }
            });

            document.getElementById('tax-stcg').textContent = Math.max(0, shortTermGains).toFixed(2);
            document.getElementById('tax-ltcg').textContent = Math.max(0, longTermGains).toFixed(2);
            document.getElementById('tax-1256').textContent = '0'; // Options can qualify for 1256 treatment
            document.getElementById('tax-fees-total').textContent = totalFees.toFixed(2);

            // Position Table
            const table = document.getElementById('taxTable');
            table.innerHTML = positions.map((pos, idx) => {
                const pl = calculatePL(pos);
                const daysHeld = Math.floor((new Date() - new Date(pos.entryDate)) / (1000 * 60 * 60 * 24));
                const category = daysHeld >= 365 ? 'Long-Term' : 'Short-Term';
                
                return `
                    <tr>
                        <td>${pos.symbol}</td>
                        <td>${new Date(pos.entryDate).toLocaleDateString()}</td>
                        <td>${pos.expirationDate}</td>
                        <td>${pos.quantity}</td>
                        <td>$${(pos.strikePrice * pos.quantity * 100).toFixed(2)}</td>
                        <td>$${((pos.strikePrice * pos.quantity * 100) + pl.netCredit).toFixed(2)}</td>
                        <td style="color: ${pl.totalPL >= 0 ? 'var(--color-success)' : 'var(--color-danger)'}; font-weight: 600;">$${pl.totalPL.toFixed(2)}</td>
                        <td>${daysHeld} days</td>
                        <td>${category}</td>
                    </tr>
                `;
            }).join('');

            document.getElementById('taxReportResults').style.display = 'block';
        }

        // Initialize
        updatePositionsDisplay();
        updateMetrics();

        // Set default dates
        const today = new Date();
        const nextMonth = new Date(today.getTime() + 30 * 24 * 60 * 60 * 1000);
        document.getElementById('expirationDate').valueAsDate = nextMonth;
        document.getElementById('backtest-end').valueAsDate = today;
        document.getElementById('backtest-start').valueAsDate = new Date(today.getTime() - 365 * 24 * 60 * 60 * 1000);
    </script>
</body>
</html>
